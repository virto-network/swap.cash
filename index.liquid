<p>{{ page.data.intro }}</p>

<form action="#select-offer" method="GET">
	<swap-cash from="fiat" rate="1.1" data-out-msg="{{ page.data.out_msg }}">
		<input name="amount" type="number" required slot="amount">
		<select name="fiat" slot="fiat-select">
			<option value="EUR">EUR</option>
		</select>
		<select name="crypto" slot="crypto-select">
			<option value="AUSD">aUSD</option>
			<option value="KSM">KSM</option>
		</select>
	</swap-cash>
	<input type="hidden" name="f" value="Europe,Paypal">
	<button class="action" type="submit">Search</button>

	<dialog id="notice" open>
		<button type="button" onclick="parentElement.close()">âœ•</button>
		{{ page.data.notice }}
	</dialog>
	
</form>

<ol id="select-offer">
	<swap-offer role="listitem" data-swaps="999" data-name="Ramen"
			data-method="Paypal" data-where="DE" data-relative="+1.4%">
		<output >0.9</output>
	</swap-offer>
	<swap-offer role="listitem" data-swaps="111" data-name="Milka"
			data-method="SEPA" data-where="FR" data-relative="+2.0%">
		<output >0.95</output>
	</swap-offer>
</ol>

<dialog>
	<form action="#confirm-order">
	</form>
</dialog>


